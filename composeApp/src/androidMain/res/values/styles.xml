<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal -->
    <style name="Theme.App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Splash screen INVISÍVEL -->
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <!-- Fundo totalmente transparente -->
        <item name="windowSplashScreenBackground">@android:color/transparent</item>

        <!-- Sem ícone -->
        <item name="windowSplashScreenAnimatedIcon">@null</item>
        <item name="windowSplashScreenAnimationDuration">0</item> <!-- Duração zero -->

        <!-- Tema após splash -->
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>
</resources>